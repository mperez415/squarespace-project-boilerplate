{
  "name": "squarespace-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A webpack boilerplate for building Squarespace templates",
  "main": "index.js",
  "config": {
    "less_file": "./src/styles/main.less",
    "less_crit_file": "./src/styles/critical/critical.less",
    "css_file": "./src/template/styles/main.css",
    "css_crit_file": "./src/styles/critical/critical.css",
    "js_file_path": "./src/template/scripts/app/",
    "staging_url": "https://[your-staging-url].squarespace.com",
    "live_url": "https://[your-live-url].squarespace.com"
  },
  "scripts": {
    "build": "npm run clean:live && npm run compile:prod && cp -av ./src/template/* ./dist/live/template/ && (cd ./dist/live/template && find . -name '.gitkeep' -type f -ls -delete)",
    "build:dev": "npm run compile:dev && npm run build:staging",
    "build:staging": "npm run clean:staging && cp -av ./src/template/* ./dist/staging/template/ && (npm run clean:gitkeep)",
    "clean:crit": "rm -fv ./src/styles/critical/critical.css",
    "clean:dist": "rm -rf ./dist/**/template/",
    "clean:gitkeep": "cd ./dist/staging/template && find . -name '.gitkeep' -type f -ls -delete",
    "clean:live": "rm -rfv ./dist/live/template/*",
    "clean:staging": "rm -rfv ./dist/staging/template/*",
    "clone": "npm run clean:dist && npm run clone:staging && npm run clone:live",
    "clone:staging": "(cd ./dist/staging && git clone ${npm_package_config_staging_url}/template.git)",
    "clone:live": "(cd ./dist/live && git clone ${npm_package_config_live_url}/template.git)",
    "compile:css": "npm run compile:css-main && npm run compile:css-crit",
    "compile:css-main": "lessc $npm_package_config_less_file $npm_package_config_css_file --autoprefix='last 2 versions' --clean-css ",
    "compile:css-crit": "lessc $npm_package_config_less_crit_file $npm_package_config_css_crit_file --autoprefix='last 2 versions' --clean-css && gulp critical-block && npm run clean:crit",
    "compile:js": "webpack",
    "compile:js-prod": "webpack -p",
    "compile:dev": "npm run compile:js && npm run compile:css",
    "compile:prod": "npm run compile:js-prod && npm run compile:css",
    "lint:js": "node_modules/eslint/bin/eslint.js $npm_package_config_js_file_path",
    "start": "squarespace-server $npm_package_config_staging_url --auth -d ./dist/staging/template",
    "test": "squarespace-server $npm_package_config_live_url --auth -d ./dist/live/template",
    "watch": "npm run build:dev && parallelshell 'npm run watch:js' 'npm run watch:styles' 'npm run watch:template' 'npm run watch:sync'",
    "watch:js": "chokidar './src/scripts/app/*' './src/scripts/app/**/*' -d 100 -c 'npm run compile:js'",
    "watch:styles": "chokidar './src/styles/*.less' './src/styles/**/*.less' -d 100 -c 'npm run compile:css'",
    "watch:template": "chokidar './src/template/*' './src/template/**/*' -d 100 -c 'npm run build:staging'",
    "watch:sync": "browser-sync start --proxy 'localhost:9000' --files './dist/staging/template'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mperez415/squarespace-webpack-boilerplate.git"
  },
  "author": "mario.perez415@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/server": "^1.0.6",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.1",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-inline": "^0.1.2",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "parallelshell": "^2.0.0",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "normalize.css": "^5.0.0"
  }
}
