{
  "name": "squarespace-webpack-boilerplate",
  "version": "1.0.1",
  "description": "A webpack boilerplate for building Squarespace templates",
  "config": {
    "less_file": "./template/styles/site.less",
    "less_crit_file": "./template/styles/critical/critical.less",
    "css_file": "./build/styles/site.css",
    "css_crit_file": "./template/styles/critical/critical.css",
    "js_file_path": "./template/scripts/",
    "staging_url": "https://mario-perez-3d4k-staging.squarespace.com",
    "prod_url": "https://mario-perez-44pl.squarespace.com"
  },
  "scripts": {
    "build": "squarespace assemble -d ./template -o ./build && npm run css && npm run js",
    "css": "npm-run-all css:main css:crit",
    "precss:main": "rm -rf ./build/styles/*",
    "css:main": "lessc --clean-css --autoprefix='last 2 versions' $npm_package_config_less_file $npm_package_config_css_file",
    "css:crit": "lessc --clean-css --autoprefix='last 2 versions' $npm_package_config_less_crit_file $npm_package_config_css_crit_file && gulp critical-block",
    "postcss:crit": "rm -rf $npm_package_config_css_crit_file",
    "js": "webpack --display-modules",
    "lint:js": "eslint $npm_package_config_js_file_path",
    "server": "squarespace runserver $npm_package_config_staging_url --auth",
    "sync": "npm run server & browser-sync start --proxy 'localhost:9000' --files 'build' ",
    "watch": "npm run watch:template & npm run watch:js & npm run watch:css & npm run sync",
    "watch:template": "squarespace assemble -d ./template -o ./build",
    "watch:css": "chokidar './template/styles/*.less' './template/styles/**/*.less' -d 100 -c 'npm run css' --initial --logLevel debug",
    "watch:js": "webpack --hide-modules --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mperez415/squarespace-webpack-boilerplate.git"
  },
  "author": "mario.perez415@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.7.10",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "dotenv": "^2.0.0",
    "eslint": "^3.12.1",
    "eslint-config-squarespace": "^1.0.0",
    "eslint-loader": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-inline": "^0.1.2",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^3.1.2",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "jquery": "^3.1.1",
    "normalize.css": "^5.0.0"
  }
}
