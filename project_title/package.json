{
  "name": "squarespace-webpack-boilerplate",
  "version": "1.0.1",
  "description": "A webpack boilerplate for building Squarespace templates",
  "config": {
    "less_file": "./src/styles/main.less",
    "less_crit_file": "./src/styles/critical/critical.less",
    "css_file": "./src/template/styles/main.css",
    "css_crit_file": "./src/styles/critical/critical.css",
    "js_file_path": "./src/template/scripts/app/",
    "staging_url": "https://mario-perez-3d4k-staging.squarespace.com",
    "live_url": "https://mario-perez-44pl.squarespace.com"
  },
  "scripts": {
    "build": "npm-run-all compile:js:prod compile:css build:live",
    "build:live": "cp -av ./src/template/* ./dist/live/template/",
    "prebuild:staging": "npm run clean:staging",
    "build:staging": "cp -av ./src/template/* ./dist/staging/template/",
    "clean:crit": "rm -fv ./src/styles/critical/critical.css",
    "clean:dist": "rm -rf ./dist/**/template/",
    "clean:live": "rm -rfv ./dist/live/template/*",
    "clean:staging": "rm -rfv ./dist/staging/template/*",
    "compile": "npm-run-all compile:*",
    "compile:css": "npm-run-all compile:css:*",
    "compile:css:main": "lessc $npm_package_config_less_file $npm_package_config_css_file --autoprefix='last 2 versions' --clean-css ",
    "compile:css:crit": "lessc $npm_package_config_less_crit_file $npm_package_config_css_crit_file --autoprefix='last 2 versions' --clean-css && gulp critical-block",
    "postcompile:css:crit": "npm run clean:crit",
    "compile:js": "webpack",
    "compile:js:prod": "webpack -p",
    "lint:js": "eslint $npm_package_config_js_file_path",
    "start": "npm-run-all -p server watch",
    "server": "squarespace-server $npm_package_config_staging_url -d ./dist/staging/template",
    "server:live": "squarespace-server $npm_package_config_live_url --auth -d ./dist/staging/template",
    "prewatch": "npm-run-all compile build:staging",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "chokidar './src/scripts/app/*' './src/scripts/app/**/*' -d 100 -c 'npm run compile:js'",
    "watch:styles": "chokidar './src/styles/*.less' './src/styles/**/*.less' -d 100 -c 'npm run compile:css'",
    "watch:template": "chokidar './src/template/*' './src/template/**/*' -d 100 -c 'npm run build:staging && browser-sync reload'",
    "watch:sync": "browser-sync start --proxy 'localhost:9000'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mperez415/squarespace-webpack-boilerplate.git"
  },
  "author": "mario.perez415@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.7.10",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.1",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-inline": "^0.1.2",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^3.1.2",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "normalize.css": "^5.0.0"
  }
}
