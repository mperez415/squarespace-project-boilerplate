{
  "name": "squarespace-project-boilerplate",
  "version": "2.0.1",
  "description": "A boilerplate for building Squarespace templates",
  "config": {
    "staging_url": "https://mario-perez-3d4k-staging.squarespace.com",
    "production_url": "https://PROJECT_URL-production.squarespace.com"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "npm-run-all --parallel server watch",
    "build": "NODE_ENV=development squarespace assemble && webpack",
    "build:prod": "NODE_ENV=production squarespace assemble && webpack",
    "clean": "rm -rf ./build/",
    "lint:js": "eslint ./source/js/",
    "watch": "squarespace assemble --watch & webpack --env=sandbox --watch",
    "server": "npm run build && npm-run-all --parallel server:stage server:proxy",
    "server:live": "npm run build && npm-run-all --parallel server:prod server:proxy",
    "server:prod": "squarespace runserver $npm_package_config_production_url -d ./build --auto-reload --auth",
    "server:stage": "squarespace runserver $npm_package_config_staging_url -d ./build --auto-reload --auth",
    "server:proxy": "browser-sync start --proxy 'localhost:9000' --ws",
    "clone:prod": "npm run clean && git clone $npm_package_config_production_url/template.git ./build",
    "clone:stage": "npm run clean && git clone $npm_package_config_staging_url/template.git ./build",
    "stage": "npm-run-all clone:stage build:prod && squarespace deploy $npm_package_config_staging_url/template.git",
    "deploy": "npm-run-all clone:prod build:prod && squarespace deploy $npm_package_config_production_url/template.git"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/TEAM_SLUG/PROJECT_TITLE.git"
  },
  "author": "name@domain.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.8.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^4.9.0",
    "eslint-config-squarespace": "^1.0.1",
    "eslint-loader": "^1.9.0",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^2.0.8",
    "progress-bar-webpack-plugin": "^1.10.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "normalize.css": "^7.0.0"
  }
}
