{
  "name": "squarespace-webpack-boilerplate",
  "version": "2.0.0",
  "description": "A webpack boilerplate for building Squarespace templates",
  "config": {
    "staging_url": "https://mario-perez-3d4k-staging.squarespace.com",
    "production_url": "https://mario-perez-3d4k-production.squarespace.com"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "NODE_ENV=development squarespace assemble && npm run styles & webpack --progress",
    "build:prod": "NODE_ENV=production npm run build",
    "build:clean": "rm -rf ./build",
    "styles": "rm -rf ./build/styles/**/ && rm ./build/styles/site.less",
    "lint:js": "eslint ./scripts/",
    "server": "npm run server:sqs:staging & (browser-sync start --proxy 'localhost:9000')",
    "server:prod": "npm run server:sqs:production & (browser-sync start --proxy 'localhost:9000')",
    "server:sqs:staging": "squarespace runserver $npm_package_config_staging_url -d ./build --auth",
    "server:sqs:production": "squarespace runserver $npm_package_config_production_url -d ./build --auth",
    "start": "(npm-run-all --parallel server watch)",
    "start:prod": "(npm-run-all --parallel server:prod watch)",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:webpack": "chokidar './scripts/**/*' './styles/site.less' './styles/(collections|core|modules)/*.less' -d 200 -c 'webpack --progress && browser-sync reload'",
    "watch:build": "chokidar './assets/**/*' './blocks/*' './collections/*' './styles/!(site).less' '*.region' 'template.conf' -d 200 -c 'npm run build && browser-sync reload'",
    "clone:staging": "npm run build:clean && git clone $npm_package_config_staging_url/template.git ./build",
    "clone:prod": "npm run build:clean && git clone $npm_package_config_production_url/template.git ./build",
    "stage": "npm-run-all clone:staging build:prod && squarespace deploy $npm_package_config_staging_url/template.git",
    "deploy": "npm-run-all clone:prod build:prod && squarespace deploy $npm_package_config_production_url/template.git"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/TEAM_SLUG/PROJECT_TITLE.git"
  },
  "author": "name@domain.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.8.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^4.9.0",
    "eslint-config-squarespace": "^1.0.1",
    "eslint-loader": "^1.9.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^2.0.8",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "normalize.css": "^7.0.0"
  }
}
