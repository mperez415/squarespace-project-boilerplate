{
  "name": "squarespace-webpack-boilerplate",
  "version": "2.0.0",
  "description": "A webpack boilerplate for building Squarespace templates",
  "config": {
    "site_less": "site.less",
    "less_file": "./styles/site.less",
    "css_file": "./build/styles/site.css",
    "styles_src": "./styles/",
    "styles_dest": "./build/styles/",
    "js_file_path": "./scripts/",
    "dev_url": "https://PROJECT_URL-staging.squarespace.com",
    "dev_repo": "https://PROJECT_URL-staging.squarespace.com/template.git",
    "prod_url": "https://PROJECT_URL-production.squarespace.com",
    "prod_repo": "https://PROJECT_URL-production.squarespace.com/template.git"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "NODE_ENV=development squarespace assemble && npm-run-all styles js",
    "build:prod": "NODE_ENV=production npm run build",
    "build:clean": "rm -rf ./build/git & squarespace clean -d ./build",
    "styles": "npm-run-all styles:*",
    "postbuild": "rm -rf ./build/styles/**/ ./build/styles/$npm_package_config_site_less",
    "styles:sqs": "rsync -vr --exclude=$npm_package_config_site_less --exclude=*/ $npm_package_config_styles_src $npm_package_config_styles_dest",
    "styles:main": "lessc --clean-css --autoprefix='last 2 versions' $npm_package_config_less_file $npm_package_config_css_file",
    "js": "squarespace clean -d ./build/scripts && webpack --display-exclude --progress",
    "lint:js": "eslint $npm_package_config_js_file_path",
    "server": "squarespace-server $npm_package_config_dev_url -d ./build --auth",
    "server:prod": "squarespace-server $npm_package_config_prod_url -d ./build --auth",
    "start": "(npm-run-all --parallel server watch)",
    "start:prod": "(npm-run-all --parallel server:prod watch)",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:js": "chokidar './scripts/**/*' -d 100 -c 'npm run js && browser-sync reload'",
    "watch:styles": "chokidar './styles/**/*' -d 100 -c 'npm run styles && browser-sync reload'",
    "watch:build": "chokidar './assets/**/*' './blocks/*' './collections/*' '*.region' 'template.conf' -d 100 -c 'npm run build && browser-sync reload'",
    "watch:sync": "browser-sync start --proxy 'localhost:9000'",
    "clone:dev": "npm run build:clean && git clone $npm_package_config_dev_repo ./build",
    "clone:prod": "npm run build:clean && git clone $npm_package_config_prod_repo ./build",
    "deploy": "rm -rf ./build && npm-run-all clone:dev build:prod && squarespace deploy $npm_package_config_dev_repo",
    "deploy:prod": "rm -rf ./build && npm-run-all clone:prod build:prod && squarespace deploy $npm_package_config_prod_repo"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/TEAM_SLUG/PROJECT_TITLE.git"
  },
  "author": "name@domain.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.8.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^3.12.1",
    "eslint-config-squarespace": "^1.0.0",
    "eslint-loader": "^1.6.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^2.0.8",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "normalize.css": "^7.0.0"
  }
}
