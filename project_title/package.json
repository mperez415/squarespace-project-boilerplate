{
  "name": "squarespace-webpack-boilerplate",
  "version": "2.0.0",
  "description": "A webpack boilerplate for building Squarespace templates",
  "config": {
    "less_file": "./styles/site.less",
    "css_file": "./build/styles/site.css",
    "sqs_less_src": "./styles/sqs.less",
    "sqs_less_dest": "./build/styles/sqs.less",
    "less_crit_file": "./styles/critical/critical.less",
    "css_crit_file": "./build/blocks/critical.css",
    "js_file_path": "./scripts/",
    "dev_repo": "https://PROJECT_URL-staging.squarespace.com/template.git",
    "prod_repo": "https://PROJECT_URL.squarespace.com/template.git"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "NODE_ENV=development squarespace assemble && npm-run-all styles js",
    "build:prod": "NODE_ENV=production npm run build",
    "build:clean": "rm -rf ./build/git & squarespace clean -d ./build",
    "styles": "squarespace clean -d ./build/styles && npm-run-all styles:*",
    "styles:sqs": "cp $npm_package_config_sqs_less_src $npm_package_config_sqs_less_dest",
    "styles:main": "lessc --clean-css --autoprefix='last 2 versions' $npm_package_config_less_file $npm_package_config_css_file",
    "styles:crit": "lessc --clean-css --autoprefix='last 2 versions' $npm_package_config_less_crit_file $npm_package_config_css_crit_file && gulp critical-block",
    "poststyles": "rm -rf $npm_package_config_css_crit_file",
    "js": "squarespace clean -d ./build/scripts && webpack --display-modules",
    "lint:js": "eslint $npm_package_config_js_file_path",
    "server": "squarespace runserver $npm_package_config_dev_url --auth",
    "server:prod": "squarespace runserver $npm_package_config_prod_url --auth",
    "start": "squarespace setup && (npm-run-all --parallel server watch)",
    "watch": "npm run build && npm-run-all --parallel watch:*",
    "watch:js": "chokidar './scripts/**/*' -d 100 -c 'npm run js && browser-sync reload'",
    "watch:styles": "chokidar './styles/**/*' -d 100 -c 'npm run styles && browser-sync reload'",
    "watch:build": "chokidar './assets/**/*' './blocks/*' './collections/*' '*.region' 'template.conf' -d 100 -c 'npm run build && browser-sync reload'",
    "watch:sync": "browser-sync start --proxy 'localhost:9000'",
    "clone:dev": "npm run build:clean && git clone $npm_package_config_dev_repo ./build",
    "clone:prod": "npm run build:clean && git clone $npm_package_config_prod_repo ./build",
    "deploy": "rm .npmrc & squarespace setup && npm-run-all clone:dev build:prod && squarespace deploy $npm_package_config_dev_repo",
    "deploy:prod": "rm .npmrc & squarespace setup && npm-run-all clone:prod build:prod && squarespace deploy $npm_package_config_prod_repo"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/TEAM_SLUG/PROJECT_TITLE.git"
  },
  "author": "name@domain.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.7.10",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.22.0",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "dotenv": "^2.0.0",
    "eslint": "^3.12.1",
    "eslint-config-squarespace": "^1.0.0",
    "eslint-loader": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-inline": "^0.1.2",
    "less": "^2.7.1",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^3.1.2",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "normalize.css": "^5.0.0"
  }
}
