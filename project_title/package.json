{
  "name": "squarespace-project-boilerplate",
  "version": "2.0.1",
  "description": "A boilerplate for building Squarespace templates",
  "config": {
    "staging_url": "https://PROJECT_URL-staging.squarespace.com",
    "production_url": "https://PROJECT_URL-production.squarespace.com"
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "NODE_ENV=development squarespace assemble && npm-run-all less js",
    "build:prod": "NODE_ENV=production npm run build",
    "build:clean": "rm -rf ./build",
    "postbuild": "rm -rf ./build/styles/**/ && rm ./build/styles/site.less",
    "lint:js": "eslint ./scripts/",
    "less": "lessc --clean-css --autoprefix='last 2 versions' ./styles/site.less ./build/styles/site.css",
    "styles": "rsync ./styles/* ./build/styles -aP --exclude=site.less --exclude=*/",
    "js": "webpack",
    "server": "npm run build && npm-run-all --parallel server:staging server:browser-sync",
    "server:live": "npm run build && npm-run-all --parallel server:production server:browser-sync",
    "server:staging": "squarespace runserver $npm_package_config_staging_url -d ./build --auth",
    "server:production": "squarespace runserver $npm_package_config_production_url -d ./build --auth",
    "server:browser-sync": "browser-sync start --proxy 'localhost:9000' --ws",
    "start": "(npm-run-all --parallel server watch)",
    "start:live": "(npm-run-all --parallel server:live watch)",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "chokidar './scripts/**/*' -d 200 -c 'npm run js && browser-sync reload'",
    "watch:less": "chokidar './styles/site.less' './styles/(collections|core|modules)/*.less' -d 200 -c 'npm run less && browser-sync reload'",
    "watch:build": "chokidar './assets/**/*' './blocks/*' './collections/*' '*.region' 'template.conf' -d 200 -c 'npm run build && browser-sync reload'",
    "watch:styles": "chokidar './styles/!(site).less' -d 200 -c 'npm run styles && browser-sync reload'",
    "clone:staging": "npm run build:clean && git clone $npm_package_config_staging_url/template.git ./build",
    "clone:prod": "npm run build:clean && git clone $npm_package_config_production_url/template.git ./build",
    "stage": "npm-run-all clone:staging build:prod && squarespace deploy $npm_package_config_staging_url/template.git",
    "deploy": "npm-run-all clone:prod build:prod && squarespace deploy $npm_package_config_production_url/template.git"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.com/TEAM_SLUG/PROJECT_TITLE.git"
  },
  "author": "name@domain.com",
  "license": "MIT",
  "devDependencies": {
    "@squarespace/toolbelt": "^0.8.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.9.0",
    "eslint-config-squarespace": "^1.0.1",
    "eslint-loader": "^1.9.0",
    "less": "^2.7.3",
    "less-plugin-autoprefix": "^1.5.1",
    "less-plugin-clean-css": "^1.5.1",
    "npm-run-all": "^4.0.2",
    "progress-bar-webpack-plugin": "^1.10.0",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "@squarespace/core": "^1.0.1",
    "normalize.css": "^7.0.0"
  }
}
